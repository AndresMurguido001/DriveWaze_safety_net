<%= render "menubar" %>

<%= form_tag(spot_index_path, method: :get) do %>
  <%= text_field_tag :zip %>
  <%= submit_tag 'Search' %>
<% end %>

<div class="container">
  <div class="mobile-header-section">
    <h4 class="page-header">Available Parking</h4>
    <p class="page-subheader">Select a place to park or search by zipcode.</p>
  </div>

  <div class="feed-search">



  </div>
  <% @spots.each do |spot| %>
    <div class="card">
      <div class="card-image">
        <%#= image_tag(spot.image) %>
        <span class="card-title"><%#= Text over spot image %></span>
      </div>
      <div class="card-content">
        <h4><%= spot.street %></h4>
        <p class="spot-info">Description: <%= spot.description %></p>
        <p class="spot-info">City: <%= spot.city %></p>
        <p class="spot-info">Zip: <%= spot.zip %></p>
        <p class="spot-info">$<%= spot.price %>.00/hr</p>
      </div>
      <div class="card-action">
        <a href="#" class="waves-effect btn #ef6c00 orange darken-3">Park Here</a>
      </div>
    </div>
  <% end %>
</div>

<%= paginate @spots %>
