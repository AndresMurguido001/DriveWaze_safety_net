<%= render "menubar" %>
<div class="container">
  <%= form_for @spot do |f| %>


    <div class="field">
      <%= f.label :street %>
      <%= f.text_field :street, id: :spot_street, :required => 'required' %>
    </div>

    <div class="field">
      <%= f.label :zip %>
      <%= f.text_field :zip, id: :spot_zip, :required => 'required' %>
    </div>

    <div class="field">
      <%= f.label :city %>
      <%= f.text_field :city, id: :spot_city, :required => 'required' %>
    </div>

    <div class="field">
      <%= f.label 'Set Your Hourly Rate' %>
      <%= f.text_field :price, id: :spot_price, :required => 'required' %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description, id: :spot_description %>
    </div>

    <div class="actions">
      <%= f.submit "Update spot", class: "waves-effect btn #ef6c00 orange darken-3" %>
    </div>
  <% end %>
</div>
